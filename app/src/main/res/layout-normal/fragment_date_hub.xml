<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/scroll"
            app:layout_constraintStart_toStartOf="@id/scroll">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:scaleType="center"
                android:scaleX="1.5"
                android:scaleY="1.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_avatar_img" />

            <TextView
                android:id="@+id/editAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_avatar_btn"
                android:fontFamily="@font/inter"
                android:paddingHorizontal="5dp"
                android:paddingVertical="8dp"
                android:text="Edit Avatar"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/imageView5"
                app:layout_constraintHorizontal_bias="0.571"
                app:layout_constraintStart_toStartOf="@+id/imageView5"
                app:layout_constraintTop_toBottomOf="@+id/imageView5" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardOne"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="@+id/cardView"
                app:layout_constraintStart_toStartOf="@+id/cardView"
                app:layout_constraintTop_toBottomOf="@+id/editAvatar">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/ic_coins" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="92dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/inter"
                    android:text="500"
                    android:textColor="@color/black"
                    android:textFontWeight="900"
                    android:textSize="34sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="92dp"
                    android:layout_marginTop="60dp"
                    android:fontFamily="@font/inter"
                    android:text="DTC Balance"
                    android:textColor="@color/black"
                    android:textFontWeight="400"
                    android:textSize="20sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="250dp"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/top_up_btn"
                    android:text="Top up"
                    android:textColor="@color/white" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardOne">

                <LinearLayout
                    android:id="@+id/firstRow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="25dp"
                        android:contentDescription=""
                        android:scaleX="1.2"
                        android:scaleY="1.2"
                        app:layout_constraintEnd_toEndOf="@+id/line1"
                        app:layout_constraintHorizontal_bias="0.108"
                        app:layout_constraintStart_toStartOf="@+id/line1"
                        app:layout_constraintTop_toBottomOf="@+id/line1"
                        app:srcCompat="@drawable/ic_like_dates" />

                    <TextView
                        android:id="@+id/datesBeenOn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="25dp"
                        android:fontFamily="@font/inter"
                        android:text="50"
                        android:textColor="@color/black"
                        android:textFontWeight="900"
                        android:textSize="40sp"
                        app:layout_constraintStart_toEndOf="@+id/imageView6"
                        app:layout_constraintTop_toBottomOf="@+id/line1" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-48dp"
                        android:layout_marginTop="50dp"
                        android:fontFamily="@font/inter"
                        android:text="Dates you've been on"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="@+id/datesBeenOn"
                        app:layout_constraintTop_toBottomOf="@+id/datesBeenOn" />

                    <View
                        android:id="@+id/line1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="-240dp"
                        android:layout_marginTop="130dp"
                        android:layout_marginEnd="20dp"
                        android:background="#DAE0E8"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/secondRow"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="150dp"
                    android:orientation="horizontal">

                    <!--Give a style of horizontal progress-->
                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:progress="80"
                        android:progressDrawable="@drawable/progress_circle"
                        android:scaleX="1.2"
                        android:scaleY="1.2"
                        app:layout_constraintStart_toStartOf="@+id/imageView6"
                        app:layout_constraintTop_toBottomOf="@+id/view2" />

                    <TextView
                        android:id="@+id/avgDateRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/inter"
                        android:text="2"
                        android:textColor="@color/black"
                        android:textFontWeight="900"
                        android:textSize="40sp"
                        app:layout_constraintStart_toStartOf="@+id/datesBeenOn"
                        app:layout_constraintTop_toBottomOf="@+id/view2" />

                    <TextView
                        android:id="@+id/avgtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-25dp"
                        android:layout_marginTop="42dp"
                        android:fontFamily="@font/inter"
                        android:text="Your average date rating"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="@+id/avgDateRating"
                        app:layout_constraintTop_toBottomOf="@+id/avgDateRating" />

                    <View
                        android:id="@+id/line3"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="120dp"
                        android:background="#DAE0E8"
                        app:layout_constraintEnd_toEndOf="@+id/line1"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/view2"
                        app:layout_constraintTop_toBottomOf="@+id/view2" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/thirdRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="200dp"
                    android:paddingBottom="30dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="88dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/line3"
                        app:srcCompat="@drawable/ic_date_kisses" />

                    <TextView
                        android:id="@+id/kissesReceived"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="100dp"
                        android:fontFamily="@font/inter"
                        android:text="24"
                        android:textColor="@color/black"
                        android:textFontWeight="900"
                        android:textSize="40sp"
                        app:layout_constraintStart_toStartOf="@+id/avgDateRating"
                        app:layout_constraintTop_toBottomOf="@+id/line3" />

                    <TextView
                        android:id="@+id/kisses_received"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="130dp"
                        android:fontFamily="@font/inter"
                        android:text="Kisses Received"
                        android:layout_marginStart="-50dp"
                        android:textColor="@color/black" />


                    <View
                        android:id="@+id/line4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="-340dp"
                        android:layout_marginTop="70dp"
                        android:layout_marginEnd="20dp"
                        android:background="#DAE0E8"
                        app:layout_constraintEnd_toEndOf="@+id/line1"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/line3"
                        app:layout_constraintTop_toBottomOf="@+id/line3" />


                    <RatingBar
                        android:id="@+id/dateRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="150dp"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.496"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/line4" />

                </LinearLayout>

                <View
                    android:id="@+id/view2"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="120dp"
                    android:background="#DAE0E8"
                    app:layout_constraintEnd_toEndOf="@+id/line1"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/line1"
                    app:layout_constraintTop_toBottomOf="@+id/line1" />


            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@+id/cardView" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>

</LinearLayout>

