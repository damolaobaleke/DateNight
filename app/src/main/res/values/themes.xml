<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/date_night_purple</item>
        <item name="colorPrimaryDark">@color/date_night_logo_text</item>  <!--Notification bar color-->
        <item name="colorAccent">@color/date_night_purple</item>

        <!-- Color Hamburger icon black -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <!-- Color action bar white -->
        <item name="actionBarStyle">@style/WhiteActionBarStyle</item>

        <!-- Color overflow menu black -->
        <item name="actionOverflowButtonStyle">@style/BlackOverFlowMenuStyle</item>

        <!--item name="drawerArrowStyle">@style/BlackDrawerArrowStyle</item-->

    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Username">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/inter</item>
    </style>

    <style name="Password">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/inter</item>
    </style>

    <style name="spinnerStyle">
        <item name="font">@font/inter</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DigitalDash">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/axiforma_heavy</item>
    </style>

    <style name="datenightHeadings">
        <item name="android:textColor">#293241</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/inter</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="horizontalLine">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <!-- For black hamburger menu -->
    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
    </style>

    <!-- For white action bar -->
    <style name="WhiteActionBarStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/white</item>
        <item name="titleTextStyle">@style/WhiteActionBarTitle</item>
    </style>

    <style name="WhiteActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- For black over flow menu -->
    <style name="BlackOverFlowMenuStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/black</item>
    </style>

    <!-- For black back arrow button -->
    <style name="BlackDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/black</item>
    </style>

    <style name="dateHubValueText">
        <item name="android:textSize">30sp</item>
        <item name="fontFamily">@font/inter</item>
        <item name="lineHeight">40dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:text">0</item>
    </style>

    <style name="InviteUserTheme">
        <item name="colorAccent">@color/white</item>
    </style>

    <!--Stripe pre-built UI -->
    <style name="StripeDefaultTheme" parent="StripeBaseTheme">
        <!-- Applied to toolbar background -->
        <item name="colorPrimary">@color/white</item>

        <!-- Applied to status bar -->
        <item name="colorPrimaryDark">@color/date_night_grey</item>

        <!-- Applied to toolbar foreground/text -->
        <item name="titleTextColor">@color/black</item>

        <!--Applied to selected Payment Method; active field; links;
            add new Payment Method call-to-action
        -->
        <item name="colorAccent">@color/date_night_purple</item>

        <!-- Applied to: Payment Method icon; inactive form field highlight -->
        <item name="colorControlNormal">@color/date_night_purple</item>

        <!-- Applied to form field text -->
        <item name="android:editTextColor">@color/date_night_purple</item>

        <item name="editTextColor">@color/date_night_purple</item>
    </style>

</resources>