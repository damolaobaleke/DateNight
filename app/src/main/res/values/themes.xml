<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/date_night_theme</item>
        <item name="colorPrimaryDark">@color/date_night_logo_text
        </item>  <!--Notification bar color-->
        <item name="colorAccent">@color/date_night_theme</item>

        <!-- Color Hamburger icon black -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <!-- Color action bar white -->
        <item name="actionBarStyle">@style/WhiteActionBarStyle</item>

        <!-- Color overflow menu black -->
        <item name="actionOverflowButtonStyle">@style/BlackOverFlowMenuStyle</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Username">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/inter</item>
    </style>

    <style name="Password">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/inter</item>
    </style>

    <style name="spinnerStyle">
        <item name="font">@font/inter</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DigitalDash">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/axiforma_heavy</item>
    </style>

    <style name="datenightHeadings">
        <item name="android:textColor">#293241</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/inter</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="horizontalLine">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <!-- For black hamburger menu -->
    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
    </style>

    <!-- For white action bar -->
    <style name="WhiteActionBarStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:titleTextColor">@color/black</item>
        <item name="elevation">3dp</item>
    </style>

    <!-- For black over flow menu -->
    <style name="BlackOverFlowMenuStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/black</item>
    </style>

    <style name="dateHubValueText">
        <item name="android:textSize">34sp</item>
        <item name="fontFamily">@font/inter</item>
        <item name="lineHeight">41dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:text">0</item>
    </style>

    <style name="InviteUserTheme">
        <item name="colorAccent">@color/white</item>
    </style>

</resources>