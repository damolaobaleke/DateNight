<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/date_night_theme</item>
        <item name="colorPrimaryDark">@color/date_night_logo_text</item>  <!--Notification bar color-->
        <item name="colorAccent">@color/date_night_theme</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Username">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/inter</item>
    </style>

    <style name="Password">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/inter</item>
    </style>

    <style name="spinnerStyle">
        <item name="font">@font/inter</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DigitalDash">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/axiforma_heavy</item>
    </style>

    <style name="datenightHeadings">
        <item name="android:textColor">#293241</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/inter</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="horizontalLine">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>