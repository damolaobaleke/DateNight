    <!--        android:layout_width="69dp"-->
    <!--        android:layout_height="match_parent"-->
    <!--        android:layout_marginLeft="8dp"-->
    <!--        android:layout_marginTop="8dp"-->
    <!--        android:layout_marginRight="8dp"-->
