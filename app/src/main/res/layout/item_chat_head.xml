    <TextView
        android:id="@+id/first_letter_name_chat_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_letter_circle"
        android:paddingHorizontal="10dp"
        android:paddingVertical="1dp"
        android:text="D"
        android:textAllCaps="true"
        android:textColor="@color/date_night_purple"
        android:textSize="26sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="13dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chatHeadLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abdulkareem Dolapo"
            android:textAlignment="viewStart"
            android:textColor="@color/date_night_grey_700"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/chatHeadMostRecentMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We are coming to see you today"
            android:textColor="@color/date_night_grey"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="13dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chatHeadTimeStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="2020-12-20"
            android:textAlignment="textEnd"
            android:textColor="@color/date_night_grey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/chatHeadNotificationCount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="14sp" />
    </LinearLayout>


    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginStart="-380dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="10dp"
        android:background="@color/date_night_grey"
        />

</LinearLayout>
