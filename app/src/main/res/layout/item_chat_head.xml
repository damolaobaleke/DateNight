<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chatHeadImage"
        android:layout_width="69dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_default_profile_img" />

    <LinearLayout
        android:layout_width="238dp"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="13dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chatHeadLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Abdulkareem Dolapo"
            android:textAlignment="viewStart"
            android:textColor="@color/date_night_grey_700"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/chatHeadMostRecentMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We are coming to see you today"
            android:textColor="@color/date_night_grey"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="13dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chatHeadTimeStamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yesterday"
            android:textAlignment="textEnd"
            android:textColor="@color/date_night_grey"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/chatHeadNotificationCount"
            android:layout_width="match_parent"
            android:layout_height="23dp" />
    </LinearLayout>

</LinearLayout>
